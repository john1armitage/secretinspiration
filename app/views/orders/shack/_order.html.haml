#invoice
  %h3= "Table: XX , Order #{@order.id}"

  %ul
    %li.header
      %p
        %span.title
          = current_tenant.name
    != render partial: "orders/#{current_tenant.domain}/order_item", collection: @order.line_items.joins( {variant: { item: {category: :root } ).order('items.grouping, items.rank, line_items.desc')

    %li.footer
      %p
        %span
          = current_tenant.company
          = "Co. No. #{current_tenant.coho}"
        %span
          = "[Order #{@order.id}]"
          = @order.updated_at.strftime('%e-%b-%y')
        %span
          = "#{pluralize(@order.line_items.size, 'item')}"
    %li.no-print
      %span
        = link_to "Print",'#', id: 'print'
