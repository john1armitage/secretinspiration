= form_for @transfer do |f|
  - if @transfer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transfer.errors.count, "error")} prohibited this transfer from being saved:"
      %ul
        - @transfer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :transfer_date
    = f.date_select :transfer_date
  .field
    = f.label :bank
    = f.text_field :bank
  .field
    = f.label :recipient
    = f.text_field :recipient
  .field
    = f.label :exchange_rate
    = f.text_field :exchange_rate
  .actions
    = f.submit 'Save'
