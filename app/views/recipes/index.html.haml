- @cost = 0
%h5= @item.name if @item
%p
  = @item.notes
%hr
.large.columns-12
  - if @item
    = link_to 'Add', new_recipe_path(item_id: @item.id)
  Ingredient
  = link_to 'Create', new_ingredient_path(item_id: @item.id)
%hr
= render @recipes
%hr
.large.columns-12
  - margin = (@item.price / 1.2) - @cost
  - percent = (100 * margin / @item.price).to_i
  = "Item Cost: #{pounds(@cost)}, Price #{pounds(@item.price)}, Target #{pounds(@cost * 3.5)}, Margin #{pounds(margin)} = #{percent}%"
  -# VERY NAUGHTY
  - @item.update(cost: @cost)