= form_for @recipe do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@recipe.errors.count, "error")} prohibited this recipe from being saved:"
      %ul
        - @recipe.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item_id
    = f.text_field :item_id
  .field
    = f.label :ingredient_id
    = f.number_field :ingredient_id
  .field
    = f.label :amount_id
    = f.number_field :amount_id
  .actions
    = f.submit 'Save'
