#editor
#display
= form_for @daily, html: { class: 'no_ajaxify'}, remote: true, :validate => true  do |f|
  %fieldset
    .row
      .field.small-12.columns
        = f.label :account_date
        = f.date_field :account_date
    .row
      .field.small-12.columns
        = f.label :credit_card, "Credit Card: #{pounds(@credit_card/100.00)}"
        = f.text_field :credit_card
    .row
      .field.small-12.columns
        = f.label :till, "Pounds in Till"
        = f.text_field :till
    .row
      .field.small-12.columns
        = f.label :surplus
        = f.text_field :surplus
    - if allow? :orders, :destroy
      .row
        .field.small-12.columns
          = f.label :safe, "In Safe"
          = f.text_field :safe
      .row
        .field.small-12.columns
          = f.label :petty, "Cash Used"
          = f.text_field :petty
      .row
        .field.small-12.columns
          = f.label :petty_reason, "Reason"
          = f.text_area :petty_reason
      .row
        .field.small-12.columns
          = f.label :safe_cash, "Safe Used"
          = f.text_field :safe_cash
      .row
        .field.small-12.columns
          = f.label :safe_reason, "Reason"
          = f.text_area :safe_reason
      .row
        .field.small-12.columns
          = f.label :bank, "Banked"
          = f.text_field :bank
    - unless @orders && @orders.size > 0
      .row
        .field.small-12.columns
          = f.label :take
          = f.text_field :take
      .row
        .field.small-12.columns
          = f.label :tips
          = f.text_field :tips
    .row
      .field.small-12.columns.left
        = f.label :session
        = f.select :session, options_for_select(Element.where(kind: 'sessions').order(:rank).map(&:name), @daily.session)
    .row
      .field.small-12.columns.left
        %label
          = "Headcount: #{@daily.headcount} ...  Correct?"
    .row
      .field.small-12.columns.left
        = f.submit 'Save'
