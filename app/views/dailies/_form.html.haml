#editor
#display
= form_for @daily, html: { class: 'no_ajaxify'}, remote: true, :validate => true  do |f|
  %fieldset
    = f.hidden_field :credit_card
    = f.hidden_field :cheque
    = f.hidden_field :goods
    = f.hidden_field :cash
    = f.hidden_field :tips
    .row
      .field.small-12.columns
        = f.label :account_date, "#{@daily.session.capitalize} Summary"
        = f.date_field :account_date
    .row
      .field.small-12.columns
        %b
          Credit Card
        %br
        = pounds(@daily.credit_card)
    .row
      .field.small-12.columns
        %b
          Cheque
        %br
        = pounds(@daily.cheque)
    .row
      .field.small-12.columns
        %b
          Goods
        %br
        = pounds(@daily.goods)
    .row
      .field.small-12.columns
        %b
          Tips
        %br
        = pounds(@daily.tips)
    .row
      .field.small-12.columns
        %b
          Cash
        %br
        = pounds(@daily.cash)
    .row
      .field.small-12.columns
        = f.label :till, "Pounds in Till"
        = f.text_field :till
    .row
      .field.small-12.columns
        = f.label :surplus
        = f.text_field :surplus
    - if allow? :orders, :destroy
      .row
        .field.small-12.columns
          = f.label :safe, "In Safe"
          = f.text_field :safe
      .row
        .field.small-12.columns
          = f.label :petty, "Cash Used"
          = f.text_field :petty
      .row
        .field.small-12.columns
          = f.label :petty_reason, "Reason"
          = f.text_area :petty_reason
      .row
        .field.small-12.columns
          = f.label :safe_cash, "Safe Used"
          = f.text_field :safe_cash
      .row
        .field.small-12.columns
          = f.label :safe_reason, "Reason"
          = f.text_area :safe_reason
      .row
        .field.small-12.columns
          = f.label :bank, "Banked"
          = f.text_field :bank
    - unless @orders && @orders.size > 0
      .row
        .field.small-12.columns
          = f.label :take
          = f.text_field :take
      .row
        .field.small-12.columns
          = f.label :tips
          = f.text_field :tips
    .row
      .field.small-12.columns.left
        %label
          = "Headcount: #{@daily.headcount} ...  Correct?"
    .row
      .field.small-12.columns.left
        = f.submit 'Save'
