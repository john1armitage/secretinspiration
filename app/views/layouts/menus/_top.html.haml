%ul
  - if (current_tenant.bookings && current_tenant.bookings == '1') && (allow? :bookings, :index )
    != link_to 'Bookings', bookings_path, :class => "small button radius"
  - if current_tenant.sitting == '1'  && (allow? :meals, :index )
    != link_to "Sitting", meals_path(), :remote => true, :class => "small button radius no_ajaxify"
  - if allow? :items, :index
    != link_to "Menu", menu_path('base'), :remote => true, :class => "small button radius no_ajaxify"
  - if allow? :postings, :index
    != link_to "Accounts", menu_path('accounts'), :remote => true, :class => "small button radius no_ajaxify"
  - if allow? :elements, :index
    != link_to "System", menu_path('system'), :remote => true, :class => "small button radius no_ajaxify"
  - if current_tenant.hostname == 'localhost' || current_tenant.hostname == '128.1.1.20' || current_tenant.hostname == '127.0.0.1'
    = render 'layouts/menus/session'