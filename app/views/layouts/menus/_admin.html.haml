%ul.inline-list
  - if allow? :items, :index
    %li
      != link_to 'Items', items_path
  - if allow? :pages, :index
    %li
      != link_to 'Pages', pages_path
  - if allow? :broadcasts, :index
    %li
      != link_to 'Broadcasts', broadcasts_path
  - if (allow? :offers, :index and current_tenant.offers == '1')
    %li
      != link_to 'Offers', offers_path
  - if (allow? :openings, :index and current_tenant.openings == '1')
    %li
      != link_to 'Openings', openings_path
  - if allow? :items, :index
    %li
      != link_to "Trade", menu_path('base'), remote: true, class: 'no_ajaxify'
  - if (allow? :dailies, :index and current_tenant.dailies == '1')
    %li
      != link_to 'Dailies', dailies_path, remote: true, class: 'no_ajaxify'
  - if allow? :postings, :index
    %li
      != link_to "Accounts", menu_path('accounts'), remote: true, class: 'no_ajaxify'
  - if allow? :elements, :index
    %li
      != link_to "System", menu_path('system'), remote: true, class: 'no_ajaxify'
:coffeescript
  jQuery ->
    $('div#menu li').on 'click', (event) ->
      $('div#menu li').removeClass 'active'
      $(this).addClass('active')
