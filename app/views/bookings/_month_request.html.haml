-#%li.request
- case opening
- when 'open'
  - open = 'Lunch/Dinner'
- else
  - open = opening.capitalize
- if allow? :seatings, :create
  = link_to "Bo1ok #{opening.capitalize}", new_booking_path(date: date.to_s, opening: opening), class: 'no_ajaxify', remote: true
- else
  = link_to "Bo2ok #{open}", new_booking_path(date: date.to_s, opening: opening), class: "no_ajaxify #{opening} #{no_content}", remote: true
