$('div#content').html("<%= escape_javascript(render :partial => 'bookings/index') %>")
<% if allow? :seatings, :create %>
    $('aside#sidebar').html("<%= escape_javascript(render :partial => 'bookings/sidebar') %>")
<% elsif @request %>
$('div#editor').html("<%= escape_javascript(render :partial => 'bookings/thanks') %>")
<% end %>
<% if @message %>
<% broadcast "/messages/new" do %>
$("#chat").prepend("<%= escape_javascript render(@message) %>");
<% end %>
<% end %>
