= form_for @wage, html: { class: 'no_ajaxify'}, remote: true, :validate => true  do |f|
  %fieldset
    .row
      = hidden_field_tag :timesheets, params[:timesheets] if params[:timesheets].present?
      .field.small-2.columns
        = f.label :fy, 'FY'
        = f.number_field :fy
      .field.small-2.columns
        = f.label :week_no, 'Week'
        = f.number_field :week_no
      .field.small-3.columns.left
        = f.label :employee_id, 'Employee'
        = f.collection_select :employee_id, Employee.where(live: true).order(:first_name), 'id', 'first_name', include_blank: true
      .field.small-2.columns.left
        = f.label :post
        = f.check_box :post
    .row
      .field.small-2.columns
        = f.label :hours
        = f.text_field :hours
      .field.small-2.columns.left
        = f.label :rate
        = f.text_field :rate
    .row
      .field.small-2.columns.left
        = f.label :gross
        = f.text_field :gross
      .field.small-2.columns
        = f.label :tips
        = f.text_field :tips
      .field.small-2.columns
        = f.label :bonus
        = f.text_field :bonus
      .field.small-2.columns.left
        = f.label :holiday
        = f.text_field :holiday
    .row
      .field.small-2.columns
        = f.label :paye
        = f.text_field :paye
      .field.small-2.columns
        = f.label :ni_employee, 'Employee'
        = f.text_field :ni_employee
      .field.small-2.columns
        = f.label :ni_employer, 'Employer'
        = f.text_field :ni_employer
      .field.small-3.columns
        = f.label :paid_date
        = f.date_field :paid_date
    .row
      .field.small-12.columns
        = f.submit 'Save'
