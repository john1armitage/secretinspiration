<% if params[:order].present? %>
$('div#content').html("<%= escape_javascript(render :partial => 'show_order') %>")
<% broadcast "/messages/new" do %>
$("#chat").append("<%= escape_javascript render(@message) %>");
<% end %>
$("#new_message")[0].reset();
<% else %>
$('div#content').html("<%= escape_javascript(render :partial => 'show') %>")
<% end %>