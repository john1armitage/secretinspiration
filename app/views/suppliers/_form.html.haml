= form_for @supplier do |f|
  %fieldset
    %legend= 'Supplier'

    .row
      .field.small-5.columns
        = f.label :name
        = f.text_field :name
      .field.small-3.columns.left
        = f.label :cats, 'Offerings'
        = f.collection_select :cats, get_categories( nil, 'incoming'), 'id', 'name', {}, {:multiple => true}
    .row
      .field.small-5.columns
        = f.label :phone1, 'Phone'
        = f.text_field :phone1
      .field.small-5.columns.left
        = f.label :phone2, 'Alternative'
        = f.text_field :phone2
    .row
      .field.small-5.columns
        = f.label :email
        = f.text_field :email
    .row
      .field.small-5.columns
        = f.label :opening_balance
        = f.text_field :opening_balance
      .field.small-3.columns.left
        = f.label :opening_balance_currency, 'Currency'
        = f.collection_select :opening_balance_currency, Element.where( :kind => 'currency').load,
          'name', 'name'
    .row
      .field.small-5.columns
        = f.label :notes
        = f.text_field :notes
    .row
      .actions
        = f.submit 'Save'
