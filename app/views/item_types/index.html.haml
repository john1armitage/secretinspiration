%h1 Listing item_types

%table
  %tr
    %th Name
    %th Rank
    %th Depth
    - get_domains.each do |domain|
      %th
        = domain.name.capitalize
    %th
    %th
    %th
    %th

  - @item_types.each do |item_type|
    %tr
      %td= item_type.name
      %td= item_type.rank
      %td= item_type.menu_depth
      - get_domains.each do |domain|
        %td
          = eval("item_type.#{domain.name}")
      %td= link_to 'Show', item_type
      %td= link_to 'Edit', edit_item_type_path(item_type)
      %td= link_to 'Destroy', item_type, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item type', new_item_type_path
